{
  "expo": {
    "name": "Cat Book",
    "slug": "cat-book",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "catbook",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.dbpradana.catbook",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.dbpradana.catbook"
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      [
        "expo-font",
        {
          "fonts": [
            "./assets/fonts/CircularStd-Book.ttf",
            "./assets/fonts/CircularStd-Medium.ttf"
          ],
          "android": {
            "fonts": [
              {
                "fontFamily": "Circular Std",
                "fontDefinitions": [
                  {
                    "path": "./assets/fonts/CircularStd-Book.ttf",
                    "weight": 450
                  },
                  {
                    "path": "./assets/fonts/CircularStd-Medium.ttf",
                    "weight": 500
                  }
                ]
              }
            ]
          },
          "ios": {
            "fonts": [
              "./assets/fonts/CircularStd-Book.ttf",
              "./assets/fonts/CircularStd-Medium.ttf"
            ]
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "0571477c-e0e2-4261-bea1-0c7b6cf802ba"
      }
    },
    "owner": "dbpradana"
  }
}
